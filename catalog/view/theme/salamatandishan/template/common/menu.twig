{% if categories %}
<nav class="uk-height-1-1 uk-flex uk-flex uk-flex-middle uk-text-zero">
  <ul class="uk-padding-remove uk-margin-remove uk-flex uk-flex-center uk-flex-1 uk-visible@m">
    <li><a href="https://salamatandishan.net" title="{{ text_home }}" target="_self">{{ text_home }}</a></li>
    {% for category in categories %}
      {% if category.children %}
        <li class="dropdown">
          <a href="{{ category.href }}" class="dropdown-toggle" data-toggle="dropdown">{{ category.name }}</a>
          <div class="uk-drop" data-uk-drop="offset:0;delay-hide:200;animation:uk-animation-slide-bottom-small;duration:200;pos:bottom-right;">
            <div class="uk-card uk-card-body uk-card-default uk-padding-remove uk-box-shadow-small">
              {% for children in category.children|batch(category.children|length / category.column|round(1, 'ceil')) %}
                <ul class="list-unstyled">
                  {% for child in children %}
                    <li><a href="{{ child.href }}">{{ child.name }}</a></li>
                  {% endfor %}
                </ul>
              {% endfor %}
            </div>
            <a href="{{ category.href }}" class="see-all">{{ text_all }} {{ category.name }}</a> </div>
        </li>
      {% else %}
        <li><a href="{{ category.href }}">{{ category.name }}</a></li>
      {% endif %}
    {% endfor %}
    <li><a href="https://salamatandishan.net/about" title="{{ text_about }}" target="_self">{{ text_about }}</a></li>
    <li><a href="https://salamatandishan.net/contact" title="{{ text_contact }}" target="_self">{{ text_contact }}</a></li>
  </ul>
  <div class="uk-flex-1 uk-hidden@m">
    <div class="uk-text-center uk-grid-small" data-uk-grid>
      <div class="uk-width-1-3"><a href="#hamburgerMenu" data-uk-toggle class="uk-flex uk-flex-center uk-flex-middle uk-border-circle uk-padding-small iconWrapper"><img src="catalog/view/theme/salamatandishan/image/sprite.svg#bars" width="18" height="18" data-uk-svg></a></div>
      <div class="uk-width-1-3"><a href="#searchModal" data-uk-toggle class="uk-flex uk-flex-center uk-flex-middle uk-border-circle uk-padding-small iconWrapper"><img src="catalog/view/theme/salamatandishan/image/sprite.svg#search" width="18" height="18" data-uk-svg></a></div>
      <div class="uk-width-1-3"><a href="tel:09173769217" class="uk-flex uk-flex-center uk-flex-middle uk-border-circle uk-padding-small iconWrapper"><img src="catalog/view/theme/salamatandishan/image/sprite.svg#phone" width="18" height="18" data-uk-svg></a></div>
    </div>
  </div>
</nav>
{% endif %}

