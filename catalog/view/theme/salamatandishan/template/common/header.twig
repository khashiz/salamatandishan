<!DOCTYPE html>
<!--[if IE]><![endif]-->
<!--[if IE 8 ]><html dir="{{ direction }}" lang="{{ lang }}" class="ie8"><![endif]-->
<!--[if IE 9 ]><html dir="{{ direction }}" lang="{{ lang }}" class="ie9"><![endif]-->
<!--[if (gt IE 9)|!(IE)]><!-->
<html dir="{{ direction }}" lang="{{ lang }}">
<!--<![endif]-->
<head>
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no" />
<meta name="theme-color" content="#73ad01">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<title>{{ title }}</title>
<base href="{{ base }}" />
{% if description %}
<meta name="description" content="{{ description }}" />
{% endif %}
{% if keywords %}
<meta name="keywords" content="{{ keywords }}" />
{% endif %}
<script src="catalog/view/javascript/jquery/jquery-2.1.1.min.js" type="text/javascript"></script>
<script src="catalog/view/javascript/bootstrap/js/bootstrap.min.js" type="text/javascript"></script>
<script src="catalog/view/javascript/common.js" type="text/javascript"></script>
<script src="catalog/view/javascript/uikit.min.js" type="text/javascript"></script>
<script src="catalog/view/javascript/custom.js" type="text/javascript"></script>
<link href="catalog/view/theme/salamatandishan/stylesheet/uikit-rtl.min.css" rel="stylesheet">
<link href="catalog/view/theme/salamatandishan/stylesheet/salamat-rtl.css" rel="stylesheet">
{% for style in styles %}
<link href="{{ style.href }}" type="text/css" rel="{{ style.rel }}" media="{{ style.media }}" />
{% endfor %}
{% for script in scripts %}
<script src="{{ script }}" type="text/javascript"></script>
{% endfor %}
{#<script src="catalog/view/javascript/common.js" type="text/javascript"></script>#}
{% for link in links %}
<link href="{{ link.href }}" rel="{{ link.rel }}" />
{% endfor %}
{% for analytic in analytics %}
{{ analytic }}
{% endfor %}
</head>
<body>
<header class="uk-text-zero">
  <div class="headerWrapper">
    <div>
      <div class="uk-container">
        <div>
          <div class="uk-grid-small" data-uk-grid>
            <div class="uk-width-1-4 uk-width-expand@m uk-text-right uk-flex uk-flex-middle">
              <div class="uk-flex-1">
                <div class="uk-grid-medium iconsWrapper" data-uk-grid>
                  <div class="uk-width-auto cartWrapper" id="cartWrapper">{{ cart }}</div>
                  <div class="uk-width-auto accountWrapper uk-visible@m">
                    <a href="{{ account }}" title="{{ text_account }}" class="uk-display-inline-block uk-position-relative icon">
                      <img src="catalog/view/theme/salamatandishan/image/sprite.svg#user" width="24" height="24" data-uk-svg>
                      {% if logged %}<span class="uk-position-absolute uk-flex uk-flex-center uk-flex-middle uk-text-zero loggedCheck"><img src="catalog/view/theme/salamatandishan/image/sprite.svg#check" class="uk-preserve-width" width="6" height="6" data-uk-svg></span>{% endif %}
                    </a>
                    <div data-uk-drop>
                      <div>
                        <div class="uk-card uk-card-default uk-text-zero">
                          <div class="uk-card-body uk-padding-small uk-border-rounded uk-box-shadow-small">
                            <div>
                              <div>
                                <div class="uk-grid-small uk-child-width-1-2 uk-text-center dashboardIcons{% if logged %} logged{% endif %}" data-uk-grid>
                                  {% if logged %}
                                    <div>
                                      <a href="{{ account }}" title="{{ text_order }}" class="uk-background-muted uk-padding-small uk-width-1-1 uk-flex uk-flex-column uk-flex-middle uk-flex-center uk-border-rounded">
                                        <span><img src="catalog/view/theme/salamatandishan/image/sprite.svg#user" class="uk-preserve-width" width="24" height="24" alt="{{ text_order }}" data-uk-svg></span>
                                        <span class="uk-text-tiny uk-margin-small-top font">{{ text_account }}</span>
                                      </a>
                                    </div>
                                    <div>
                                      <a href="{{ order }}" title="{{ text_order }}" class="uk-background-muted uk-padding-small uk-width-1-1 uk-flex uk-flex-column uk-flex-middle uk-flex-center uk-border-rounded">
                                        <span><img src="catalog/view/theme/salamatandishan/image/sprite.svg#box-open" class="uk-preserve-width" width="24" height="24" alt="{{ text_order }}" data-uk-svg></span>
                                        <span class="uk-text-tiny uk-margin-small-top font">{{ text_order }}</span>
                                      </a>
                                    </div>
                                    <div>
                                      <a href="https://salamatandishan.net/address" title="{{ text_address }}" class="uk-background-muted uk-padding-small uk-width-1-1 uk-flex uk-flex-column uk-flex-middle uk-flex-center uk-border-rounded">
                                        <span><img src="catalog/view/theme/salamatandishan/image/sprite.svg#map" class="uk-preserve-width" width="24" height="24" alt="{{ text_address }}" data-uk-svg></span>
                                        <span class="uk-text-tiny uk-margin-small-top font">{{ text_address }}</span>
                                      </a>
                                    </div>
                                    <div>
                                      <a href="https://salamatandishan.net/logout" title="{{ text_logout }}" class="uk-background-muted uk-width-1-1 uk-padding-small uk-width-1-1 uk-height uk-flex uk-flex-column uk-flex-middle uk-flex-center uk-border-rounded">
                                        <span><img src="catalog/view/theme/salamatandishan/image/sprite.svg#signout" class="uk-preserve-width" width="24" height="24" alt="{{ text_logout }}" data-uk-svg></span>
                                        <span class="uk-text-tiny uk-margin-small-top font">{{ text_logout }}</span>
                                      </a>
                                    </div>
                                  {% else %}
                                    <div>
                                      <a href="{{ register }}" title="{{ text_register }}" class="uk-background-muted uk-padding-small uk-width-1-1 uk-flex uk-flex-column uk-flex-middle uk-flex-center uk-border-rounded">
                                        <span><img src="catalog/view/theme/salamatandishan/image/sprite.svg#user-plus" class="uk-preserve-width" width="24" height="24" alt="{{ text_register }}" data-uk-svg></span>
                                        <span class="uk-text-tiny uk-margin-small-top font">{{ text_register }}</span>
                                      </a>
                                    </div>
                                    <div>
                                      <a href="{{ login }}" title="{{ text_login }}" class="uk-background-muted uk-width-1-1 uk-padding-small uk-width-1-1 uk-height uk-flex uk-flex-column uk-flex-middle uk-flex-center uk-border-rounded">
                                        <span><img src="catalog/view/theme/salamatandishan/image/sprite.svg#signin" class="uk-preserve-width" width="24" height="24" alt="{{ text_login }}" data-uk-svg></span>
                                        <span class="uk-text-tiny uk-margin-small-top font">{{ text_login }}</span>
                                      </a>
                                    </div>
                                  {% endif %}
                                </div>
                              </div>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                  {{ search }}
                </div>
              </div>
            </div>
            <div class="uk-width-1-2 uk-width-1-3@m uk-text-center" id="logo">
              {% if logo %}
                <a href="{{ home }}" class="uk-display-inline-block uk-padding-small"><img src="{{ logo }}" title="{{ name }}" alt="{{ name }}" class="" /></a>
              {% else %}
                <h1><a href="{{ home }}">{{ name }}</a></h1>
              {% endif %}
            </div>
            <div class="uk-width-1-4 uk-width-expand@m uk-text-left uk-flex uk-flex-left uk-flex-middle uk-text-zero phoneWrapper">
              <div class="uk-flex-1 uk-hidden@m">
                <div class="uk-grid-medium iconsWrapper uk-flex-left" data-uk-grid>
                  <div class="uk-width-auto accountWrapper">
                    <a href="{{ account }}" title="{{ text_account }}" class="uk-display-inline-block uk-margin-small-left uk-position-relative icon">
                      <img src="catalog/view/theme/salamatandishan/image/sprite.svg#user" width="32" height="32" data-uk-svg>
                      {% if logged %}<span class="uk-position-absolute uk-flex uk-flex-center uk-flex-middle uk-text-zero loggedCheck"><img src="catalog/view/theme/salamatandishan/image/sprite.svg#check" class="uk-preserve-width" width="6" height="6" data-uk-svg></span>{% endif %}
                    </a>
                  </div>
                </div>
              </div>
              <div class="uk-visible@m">
                <div class="uk-grid-small uk-text-right" data-uk-grid>
                  <div class="uk-width-auto">
                    <a href="{{ contact }}" class="uk-flex uk-flex-center uk-flex-middle uk-border-circle iconWrapper"><img src="catalog/view/theme/salamatandishan/image/sprite.svg#phone" width="18" height="18" data-uk-svg></a>
                  </div>
                  <div class="uk-width-auto uk-flex uk-flex-middle">
                    <a href="{{ contact }}" class="uk-visible@m">
                      <span class="uk-margin-remove uk-text-tiny uk-text-muted uk-display-block font">با ما تماس بگیرید</span>
                      <span class="uk-text-small uk-text-yellow uk-display-block uk-text-bold font fnum ltr">{{ telephone }}</span>
                    </a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="menuWrapper" data-uk-sticky>
    <div>
      <div class="uk-container">
        <div>
          <div class="uk-border-pill uk-box-shadow-small wrapper">{{ menu }}</div>
        </div>
      </div>
    </div>
  </div>
</header>
{#
{{ currency }}
{{ language }}
<a href="{{ checkout }}">{{ text_checkout }}</a>
<a href="{{ wishlist }}" id="wishlist-total" title="{{ text_wishlist }}"><i class="fa fa-heart"></i> <span class="hidden-xs hidden-sm hidden-md">{{ text_wishlist }}</span></a>
#}